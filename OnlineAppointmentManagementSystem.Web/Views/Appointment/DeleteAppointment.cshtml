@model OnlineAppointmentManagementSystem.Domain.Entities.Appointment
<form asp-action="DeleteAppointment">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Product</h1>
        <input hidden asp-for="Id" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;"> Service</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Service.Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Date</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="AppointmentDate" disabled class="form-control" />


            <div class="col-5 offset-2">

                    <a asp-action="GetAppointments" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>